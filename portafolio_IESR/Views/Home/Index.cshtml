@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Carrusel</title>
    <!-- Agrega el enlace al CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Establece un fondo gris para todo el cuerpo de la página */
        body {
            background-color: #1C1C1C;
        }

        /* Agrega el fondo SVG como fondo de la página */
        #background-svg {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: auto;
            z-index: -1;
        }

        /* Establece un tamaño máximo para las imágenes del carrusel */
        .carousel-inner img {
            max-width: 80%; /* Ajusta el tamaño de las imágenes según tu preferencia */
            margin: 0 auto; /* Centra las imágenes horizontalmente */
        }
    </style>
</head>
<body>
    <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="10000">
                <img src="https://s3-alpha.figma.com/hub/file/1803556575/dddad4ab-afbe-4c4b-bfbd-5f872db64b12-cover.png" class="d-block w-100" alt="Imagen 1">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="https://i.ytimg.com/vi/HtLfFlqyiIs/maxresdefault.jpg" class="d-block w-100" alt="Imagen 2">
            </div>
            <div class="carousel-item">
                <img src="https://cloudfront-us-east-1.images.arcpublishing.com/infobae/TKXKWIF53RD5ZNUZYAOQZPJUNI.webp" class="d-block w-100" alt="Imagen 3">
            </div>
             <div class="carousel-item">
                <img src="http://imgfz.com/i/2tqj8TR.png" class="d-block w-100" alt="Imagen 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Agrega el fondo SVG en la parte inferior de la página -->
    <div id="background-svg">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <filter id="blur">
                <feGaussianBlur in="SourceGraphic" stdDeviation="10" />
            </filter>
            <linearGradient id="waveGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" style="stop-color: #FF0000; stop-opacity: 1" />
                <stop offset="25%" style="stop-color: #00FF00; stop-opacity: 1" />
                <stop offset="50%" style="stop-color: #0000FF; stop-opacity: 1" />
                <stop offset="75%" style="stop-color: #FF00FF; stop-opacity: 1" />
                <stop offset="100%" style="stop-color: #FF0000; stop-opacity: 1" />
            </linearGradient>
            <path filter="url(#blur)" fill="url(#waveGradient)" fill-opacity="1" d="M0,192L48,186.7C96,181,192,171,288,192C384,213,480,267,576,282.7C672,299,768,277,864,261.3C960,245,1056,235,1152,218.7C1248,203,1344,181,1392,170.7L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
        </svg>


    </div>

    <!-- Agrega el enlace al JavaScript de Bootstrap y jQuery (opcional) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>

